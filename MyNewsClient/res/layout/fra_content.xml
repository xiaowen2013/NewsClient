<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.xiaowen.news.view.NoScrollViewPager
        android:id="@+id/content_fra_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/contant_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/content_rb_home"
            style="@style/btnStyleHome"
            android:drawableTop="@drawable/home_select"
            android:text="首页" />

        <RadioButton
            android:id="@+id/content_rb_news"
            style="@style/btnStyleHome"
            android:drawableTop="@drawable/news_select"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/content_rb_smartservice"
            style="@style/btnStyleHome"
            android:drawableTop="@drawable/smartservice_select"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/content_rb_govaffairs"
            style="@style/btnStyleHome"
            android:drawableTop="@drawable/govaffairs_select"
            android:text="政务" />

        <RadioButton
            android:id="@+id/content_rb_setting"
            style="@style/btnStyleHome"
            android:drawableTop="@drawable/setting_select"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>